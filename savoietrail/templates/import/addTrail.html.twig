{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="formTrail">
                {{ form_start(form) }}
                {{ form_row(form.titre) }}
                {{ form_row(form.image, {
                    attr: {
                        'placeholder': 'Choisir une image',
                    }
                }) }}
                {{ form_row(form.niveau) }}
                {{ form_row(form.denivele) }}
                {{ form_row(form.altitude_de_depart) }}
                {{ form_row(form.altitudedarrivee) }}
                {{ form_row(form.tempsalamontee) }}
                {{ form_row(form.tempsaladescente) }}
                {{ form_row(form.tempstotal) }}
                {{ form_row(form.description) }}
                {{ form_row(form.album, {
                    attr: {
                        'placeholder' : 'Choisir plusieur images',
                    }
                }) }}
                {{ form_row(form.gpx, {
                    attr: {
                        'placeholder' : 'Choisir fichier GPX',
                    }
                }) }}
            {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
<script>
    $('.custom-file-input').on('change', function(event) {
        var inputFile = event.currentTarget;
        $(inputFile).parent()
            .find('.custom-file-label')
            .html(inputFile.files[0].name);
    });
</script>
{% endblock %}